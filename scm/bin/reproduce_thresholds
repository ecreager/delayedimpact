#!/bin/bash

python simulation.py --gin_file config/one-quarter.gin \
  --gin_param="policy_name='maxprof'" \
  --gin_param="results_dir='results/python/simulation/situation1/maxprof'"

python simulation.py --gin_file='config/one-quarter.gin' \
  --gin_param='policy_name="dempar"' \
  --gin_param='results_dir="results/python/simulation/situation1/dempar"'

python simulation.py --gin_file config/one-quarter.gin \
  --gin_param="policy_name='eqopp'" \
  --gin_param="results_dir='results/python/simulation/situation1/eqopp'"

python simulation.py --gin_file config/one-tenth.gin \
  --gin_param="policy_name='maxprof'" \
  --gin_param="results_dir='results/python/simulation/situation2/maxprof'"

python simulation.py --gin_file config/one-tenth.gin \
  --gin_param="policy_name='dempar'" \
  --gin_param="results_dir='results/python/simulation/situation2/dempar'"

python simulation.py --gin_file config/one-tenth.gin \
  --gin_param="policy_name='eqopp'" \
  --gin_param="results_dir='results/python/simulation/situation2/eqopp'"

python -m unittest simulation_test.py
